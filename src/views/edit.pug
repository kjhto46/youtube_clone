extends base.pug

block content
    h4 Update Video
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title" maxlength=80)
        input(placeholder="Description", required, type="text", name="description" minlength=8 value=video.description)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags" value=video.hashtags.join())
        input(type="submit", value="Upload Video")