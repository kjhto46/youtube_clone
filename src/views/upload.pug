extends base.pug

block content
    div 
        video#preview
        button#actionBtn 시작버튼
    if errorMessage
        span=errorMessage
    //- multer를 이용해서 작업할때는 form에 enctype="multipart/form-data" 를 잊지말자
    form(method="POST" enctype="multipart/form-data") 
        label(for="video") Video File
        input(type="file" accept="video/*" required, id="video", name="video")
        label(for="thumb") Thumbnail File
        input(type="file" accept="image/*" required, id="thumb", name="thumb")
        input(placeholder="Title", required, type="text", name="title" maxlength=80)
        input(placeholder="Description", required, type="text", name="description" minlength=8)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js") 